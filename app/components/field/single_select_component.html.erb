<div class="<%= @field.bootstrap_col %> mb-3">
  <label class="form-label" for="item_data_<%= @field.key %>"><%= @field.title %></label>
  <%= select_tag "item[data][#{@field.key}]",
                 options_for_select(@field.single_select_data, @item.data[@field.key]),
                 class: "form-select",
                 data: {
                   action: "change->autosave#submit",
                   controller: "single-select",
                   single_select_field_id_value: @field.id,
                   single_select_create_path_value: editor_single_selects_path
                 } %>
  <div class="invalid-feedback" id="item_data_<%= @field.key %>_feedback"></div>
</div>
