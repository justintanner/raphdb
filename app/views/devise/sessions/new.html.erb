<div class="devise">
  <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { onsubmit: "window.copyCSRFMetaTagToFormAuthenticityToken()" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating mb-0">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'john.smith@raphdb.com' %>
      <%= f.label :email %>
    </div>
    <div class="form-floating mt-0">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
      <%= f.label :password %>
    </div>

    <%= f.submit "Sign in", class: 'w-100 btn btn-lg btn-primary mt-3', data: { disable_with: false } %>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>