<div class="devise">
  <h1 class="h3 mb-3 fw-normal">Resend unlock instructions</h1>

  <% flash.each do |_type, msg| %>
    <div class="alert alert-danger" role="alert"><%= msg %></div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= f.label :email %>
    </div>

    <div class="actions">
      <%= f.submit 'Resend unlock instructions', class: 'w-100 btn btn-primary mt-3' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
