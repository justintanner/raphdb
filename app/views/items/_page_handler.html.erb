<%= turbo_frame_tag "page_handler" do %>
  <%= turbo_stream_action_tag("append", target: "items_#{tab}", template: %(#{render partial: "items/#{tab}/items", locals: { items: items, pagy: pagy } })) %>
  <%= turbo_stream_action_tag("replace", target: "load-more-button", template: %(#{render "items/#{tab}/load_more_button", pagy: pagy, tab: tab})) %>

  <% if tab == "list" %>
    <%= turbo_stream_action_tag("update", target: "list_spinner", template: %(#{render "items/list/spinner"})) %>
  <% end %>
<% end %>
