<%= turbo_frame_tag "page_handler" do %>
  <%= turbo_stream_action_tag("append", target: "append-items", template: %(#{render partial: "items/search/#{@tab}_item", collection: @items, as: :item })) %>
  <%= turbo_stream_action_tag("replace", target: "#{@tab}-load-more", template: %(#{render "items/search/#{@tab}_load_more", pagy: @pagy, tab: @tab})) %>
<% end %>