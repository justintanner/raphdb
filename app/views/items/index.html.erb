<%= content_for :no_footer, true %>
<%= content_for :title, search_title(query: params[:q]) %>
<%= content_for :container_class, "container-#{@tab}" %>

<div class="container-<%= @tab %>">
  <div class="row">
    <div class="col">
      <h1 class="text-center font-serif mb-3"><%= search_title(query: params[:q]) %></h1>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to items_path(q: params[:q], page: @pagy.page, tab: "images"), class: class_names("nav-link": true, "active": @tab == "images") do %>
            <%= render "svgs/bi-grid" %><span class="ms-1 d-none d-md-inline">Images</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to items_path(q: params[:q], page: @pagy.page, tab: "list"), class: class_names("nav-link": true, "active": @tab == "list") do %>
            <%= render "svgs/bi-list" %><span class="ms-1 d-none d-md-inline">List</span>
          <% end %>
        </li>
        <li class="nav-item pt-2 ms-auto">
          <span class="text-muted"><%= search_count(count: @pagy.count, query: params[:q]) %></span>
        </li>
      </ul>
    </div>
  </div>
</div>

<% if @tab == "list" %>
  <%= render "items/search/list" %>
<% else %>
  <%= render "items/search/images" %>
<% end %>