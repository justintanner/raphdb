<div class="col-auto" id="<%= dom_id(item) %>">
  <div class="card card-medium mb-3">
    <div class="card-header text-truncate">
      <div class="row">
        <div class="col text-truncate">
          <%= link_to item do %>
            <%= render "svgs/bi-box-arrow-up-left" %>
            <span class="p-0 ms-2"><%= item.title %></span>
          <% end %>
        </div>
        <div class="col-auto text-right">
          <span class="p-0"><%= item.data["number"] %></span>
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-auto pe-0">
          <% first_image = item.images.with_attached_file.select(&:attached?).first %>
          <% if first_image.present? %>
            <% if first_image.horizontal? %>
              <%= render "medium_horizontal_image", first_image: first_image, item: item %>
            <% else %>
              <%= render "medium_vertical_image", first_image: first_image, item: item %>
            <% end %>
          <% end %>
        </div>
        <div class="col">
          <div class="pb-5 overflow-hidden" style="height: 250px;">
            <%= render "fields_data", current_item: item, except: %w(item_title prefix number in_set), limit: 4 %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>