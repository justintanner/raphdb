<div class="container">
  <h1 class="text-center mt-1 pb-3"><%= item.title %></h1>
</div>

<div class="container-fluid">
  <div class="row justify-content-center g-3">
    <div class="col-auto">
      <div class="item-sidebar">
        <div class="card mb-3">
          <div class="card-header px-3 border-bottom-0">
            <div class="row">
              <div class="col">
                <a href="#" class="d-flex align-items-center">
                  <small><i class="bi bi-cloud-upload me-2"></i>Contribute Image</small>
                </a>
              </div>
              <div class="col">
                <a href="javascript:void(0);"
                   class="d-flex align-items-center justify-content-end"
                   data-controller="share"
                   data-clipboard-text="<%= request.original_url %>">
                  <small><i class="bi bi-link-45deg me-1"></i>Share</small>
                </a>
              </div>
            </div>
          </div>
        </div>

        <%= render "card", item: item %>
      </div>
    </div>
  </div>
</div>
