<div class="position-fixed top-0 start-0 p-3" style="z-index: 11" >
  <div data-controller="error-popup"
       data-action="error@document->error-popup#show"
       class="toast"
       role="alert"
       aria-live="assertive"
       aria-atomic="true"
       data-bs-autohide="false">
    <div class="toast-header">
      <span class="text-danger me-2"><%= render "svgs/bi-bug-fill" %></span>
      <strong class="me-auto text-danger" data-error-popup-target="title"></strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" data-error-popup-target="body"></div>
  </div>
</div>
