  <div class="input-group">
    <span class="input-group-text" id="inputGroupPrepend"><%= field.currency_symbol %></span>
    <%= text_field_tag "item[data][#{field.key}]", @item.data[field.key], class: "form-control", aria: { describedby: "inputGroupPrepend" } %>
  </div>
</div>