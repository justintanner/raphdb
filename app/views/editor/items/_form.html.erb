<div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" data-editor-target="editItemOffcanvas">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Editing Item</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <%= turbo_frame_tag "edit_item", src: edit_editor_item_path(id: Item.first.id), data: { editor_target: "editItemFrame" } %>
  </div>
</div>