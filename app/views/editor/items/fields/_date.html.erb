<div class="<%= field.bootstrap_col %>">
  <label class="form-label" for="item_data_<%= field.key %>"><%= field.title %></label>
  <%= text_field_tag "item[data][#{field.key}]",
                     @item.data[field.key],
                     class: class_names("form-select": true, "is-invalid": item.errors.include?(field.form_error_sym)),
                     data: {
                       "controller": "datepicker",
                       "datepicker-format-value": field.pikaday_date_format
                     } %>
  <% if item.errors.include?(field.form_error_sym) %>
    <div class="invalid-feedback mb-1"><%= item.errors[field.form_error_sym].first %></div>
  <% else %>
    <div class="mb-3"></div>
  <% end %>
</div>
