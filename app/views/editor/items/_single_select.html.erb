<div class="<%= field.bootstrap_col %>">
  <label class="form-label" for="item_data_<%= field.key %>"><%= field.title %></label>
  <%= select_tag "item[data][#{field.key}]",
                 options_for_select(field.single_select_data, @item.data[field.key]),
                 class: class_names("form-select": true, "is-invalid": item.errors.include?(field.form_error_sym)),
                 data: {
                   "controller": "editor--pikaday",
                   "editor--single-select-field-id-value": field.id
                 } %>
  <% if item.errors.include?(field.form_error_sym) %>
    <div class="invalid-feedback mb-1"><%= item.errors.full_messages_for(field.form_error_sym).join(',') %></div>
  <% else %>
    <div class="mb-3"></div>
  <% end %>
</div>