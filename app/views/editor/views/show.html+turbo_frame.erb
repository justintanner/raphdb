<%= turbo_frame_tag "page_operations" do %>
  <%= turbo_stream.append "editable-list-tbody" do %>
    <%= render View::EditableRowComponent.with_collection(@items, view: @view, offset: @pagy.offset) %>
  <% end %>
  <%= turbo_stream.replace "load-more-button" do %>
    <%= render View::LoadMoreComponent.new(tab: "list", query: params[:q], next_page: @pagy.next) %>
  <% end %>
  <%= turbo_stream.replace "list_spinner" do %>
    <%= render View::SpinnerComponent.new %>
  <% end %>
<% end %>
